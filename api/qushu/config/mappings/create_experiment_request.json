// config/mappings/create_experiment_request.json
{
    "mappings": {
      "name": {"source": "flight_name", "required": true},
      "mode": {"default": 1},
      "endpoint_type": {"source": "experiment_type", "transform": "type_converter"},
      "duration": {"source": "duration_days", "transform": "days_to_seconds"},
      "major_metric": {"source": "core_metric_id"},
      "metrics": {
        "source": "selected_metrics",
        "mappings": {
          "id": {"source": "metric_id"}
        }
      },
      "versions": {
        "source": "groups",
        "mappings": {
          "type": {"source": "group_type", "transform": "version_type_converter"},
          "name": {"source": "group_name"},
          "config": {"source": "parameters"}
        }
      },
      "layer_info": {
        "source": "mutex_group",
        "mappings": {
          "layer_id": {"source": "group_id"},
          "version_resource": {"source": "traffic_percent"}
        }
      }
    }
  }